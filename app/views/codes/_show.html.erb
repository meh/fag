<div class="code">
    <div class="language">
        <%= h SyntaxHighlighter.language(code.language, true) %>
        (<%= CodesHelper.output :owner, code %>)
        <%= "(<a href='/codes/#{code.id}'>link</a>)" if inDrop rescue false %>
        <%= "[<a href='/codes/#{code.id}.raw'>raw</a>]" %>
    </div>

    <div class="source"><%= SyntaxHighlighter.new(code.language).highlight(code.content) %></div>
</div>
