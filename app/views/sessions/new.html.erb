<% form_for(@user) do |f| %>
    <%= f.error_messages %>

    <div class="field">
        <div class="label"><%= f.label :name %></div>
        <%= f.text_field :name %>
    </div>
    
    <div class="field">
        <div class="label"><%= f.label :password %></div>
        <%= f.password_field :password %>
    </div>
<% end %>
