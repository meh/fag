<% if @codes.empty? %>
    There are no codes ;_;
<% else %>

<table class="codes">
    <tr><th>Pasted At</th><th>Pasted By</th><th>Language</th><th>Code</th></tr>
    <% @codes.each do |code| %><tr>
        <%= code.output :last_code, '<td>#{at}</td><td>#{by}</td>' %>
        <td><%= SyntaxHighlighter.language(code.language, true) %></td>
        <td><a href="<%= code.path %>">&lt; /codes/<%= code.id %></a></td>
    </tr><% end %>
</table>

<% end %>

<br/>
<div class="text"><a href="/codes/new">Paste code</a></div>
